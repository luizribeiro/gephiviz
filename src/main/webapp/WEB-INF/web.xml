<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>GephiViz</display-name>
    <filter>
        <filter-name>FacebookAuthFilter</filter-name>
        <filter-class>org.luizribeiro.gephiviz.FacebookAuthFilter</filter-class>
        <init-param>
            <param-name>api_key</param-name>
            <param-value>your_key_goes_here</param-value>
        </init-param>
        <init-param>
            <param-name>app_secret</param-name>
            <param-value>your_key_goes_here</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>FacebookAuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>RenderGraphServlet</servlet-name>
        <servlet-class>org.luizribeiro.gephiviz.RenderGraphServlet</servlet-class>
        <init-param>
            <param-name>output_width</param-name>
            <param-value>4096</param-value>
        </init-param>
        <init-param>
            <param-name>output_height</param-name>
            <param-value>4096</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>RenderGraphServlet</servlet-name>
        <url-pattern>/render</url-pattern>
    </servlet-mapping>
</web-app>
